{{!
    @template mod_datalynx/fieldgroup

    Displays fieldgroups within datalynx.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "line":[
            {"subfield":[{"name":"a","content":"a0"},{"name":"b","content":"b0"}]},
            {"subfield":[{"name":"a","content":"a1"},{"name":"b","content":"b1"}]}
        ],
        "header":[
            {"name":"a"},{"name":"b"}
        ]
    }
}}

{{#line}}
<div class="row">
    {{#subfield}}
        <div class="col" data-field-name="{{name}}">{{name}}: {{{content}}}</div>
    {{/subfield}}
</div>
{{/line}}
